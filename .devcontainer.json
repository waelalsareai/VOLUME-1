{
    "name": "Chemeketa Basic Project",
    "customizations": {
        "vscode": {
            "extensions": [
                "usernamehw.errorlens",
                "cschlosser.doxdocgen",
                "vsls-contrib.gitdoc",
                // "ms-vscode.cpptools",  // loading this here stops gitdoc from initializing correctly
                "davidkaiser.kaiser-project-zip",
            ]
        },
        "codespaces": {
            "openFiles": [
                "main.cpp",
            ]
        }
    },
    "build": {
        "dockerfile": "Dockerfile"
    },
    // add cpptools after container is built
    "postAttachCommand": "code --install-extension ms-vscode.cpptools"
}